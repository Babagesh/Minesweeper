<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <Spinner
        android:id="@+id/mineColor"
        android:layout_width="120dp"
        android:layout_height="29dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:entries="@array/cellColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uncoveredCellColor" />

    <Spinner
        android:id="@+id/suspectColor"
        android:layout_width="120dp"
        android:layout_height="29dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:entries="@array/cellColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coveredCellColor" />

    <Spinner
        android:id="@+id/uncoveredCellColor"
        android:layout_width="120dp"
        android:layout_height="29dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:entries="@array/cellColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/percentMines" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/settings"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/percentMines"
        android:layout_width="253dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:entries="@array/percentMines"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cols" />

    <Spinner
        android:id="@+id/cols"
        android:layout_width="253dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:entries="@array/numCols"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rows" />

    <Spinner
        android:id="@+id/rows"
        android:layout_width="253dp"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:entries="@array/numRows"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <Spinner
        android:id="@+id/coveredCellColor"
        android:layout_width="120dp"
        android:layout_height="29dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:entries="@array/cellColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/percentMines" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:outlineAmbientShadowColor="#009688"
        android:outlineSpotShadowColor="#009688"
        android:shadowColor="#009688"
        android:text="@string/submit"
        android:textColor="#4CAF50"
        android:textColorHighlight="#009688"
        android:textColorHint="#009688"
        android:textColorLink="#009688"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rows"
        app:layout_constraintBottom_toBottomOf="@+id/rows"
        app:layout_constraintEnd_toStartOf="@+id/rows"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rows" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="40dp"
        android:layout_height="24dp"
        android:text="Cols"
        app:layout_constraintBottom_toBottomOf="@+id/cols"
        app:layout_constraintEnd_toStartOf="@+id/cols"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cols" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="% Mines"
        app:layout_constraintBottom_toBottomOf="@+id/percentMines"
        app:layout_constraintEnd_toStartOf="@+id/percentMines"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/percentMines" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Covered Cell Color"
        app:layout_constraintBottom_toTopOf="@+id/coveredCellColor"
        app:layout_constraintEnd_toEndOf="@+id/coveredCellColor"
        app:layout_constraintStart_toStartOf="@+id/coveredCellColor"
        app:layout_constraintTop_toBottomOf="@+id/percentMines" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Uncovered Cell Color"
        app:layout_constraintBottom_toTopOf="@+id/uncoveredCellColor"
        app:layout_constraintEnd_toEndOf="@+id/uncoveredCellColor"
        app:layout_constraintStart_toStartOf="@+id/uncoveredCellColor"
        app:layout_constraintTop_toBottomOf="@+id/percentMines" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Suspected Cell Color"
        app:layout_constraintBottom_toTopOf="@+id/suspectColor"
        app:layout_constraintEnd_toEndOf="@+id/suspectColor"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/suspectColor"
        app:layout_constraintTop_toBottomOf="@+id/coveredCellColor"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mine Color"
        app:layout_constraintBottom_toTopOf="@+id/mineColor"
        app:layout_constraintEnd_toEndOf="@+id/mineColor"
        app:layout_constraintStart_toStartOf="@+id/mineColor"
        app:layout_constraintTop_toBottomOf="@+id/uncoveredCellColor" />

</androidx.constraintlayout.widget.ConstraintLayout>